<div class="row justify-content-center mt-5 animate__animated animate__fadeIn">
  <div class="col-md-8 text-center">
    <div class="mb-4">
      <i class="bi bi-exclamation-triangle-fill" style="font-size: 5rem; color: var(--danger-color);"></i>
      <h2 class="mt-3">Oops! Something went wrong</h2>
      <p class="text-muted"><%= error || 'An unexpected error occurred' %></p>
    </div>
    
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h4 class="mb-3">We apologize for the inconvenience</h4>
        <p>Our team has been notified of this issue and we're working to fix it as quickly as possible.</p>
        
        <div class="alert alert-info mt-3">
          <i class="bi bi-info-circle-fill me-2"></i>
          <span>If you continue to experience issues, please try again later or contact our support team.</span>
        </div>
        
        <div class="d-grid gap-3 col-md-8 mx-auto mt-4">
          <a href="javascript:history.back()" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Go Back
          </a>
          <a href="/" class="btn btn-primary">
            <i class="bi bi-house me-2"></i>Return to Home
          </a>
          <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <a href="/admin/dashboard" class="btn btn-outline-secondary">
              <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
            </a>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
      <p class="text-muted">
        <small>Error Reference: <%= Date.now().toString(36).toUpperCase() %></small>
      </p>
    </div>
  </div>
</div>

<script>
  // Add some animation to make the error page less intimidating
  document.addEventListener('DOMContentLoaded', function() {
    const icon = document.querySelector('.bi-exclamation-triangle-fill');
    if (icon) {
      setInterval(() => {
        icon.classList.toggle('animate__animated');
        icon.classList.toggle('animate__headShake');
      }, 3000);
    }
  });
</script>