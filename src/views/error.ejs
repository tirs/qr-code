<div class="row justify-content-center mt-5">
  <div class="col-md-8 text-center">
    <div class="mb-4">
      <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: var(--danger-color);"></i>
      <h2 class="mt-3">Oops! Something went wrong</h2>
      <p class="text-muted"><%= error || 'An unexpected error occurred' %></p>
    </div>
    
    <div class="card">
      <div class="card-body p-4">
        <p>We apologize for the inconvenience. Please try one of the following:</p>
        
        <div class="d-grid gap-3 col-md-8 mx-auto mt-4">
          <a href="javascript:history.back()" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Go Back
          </a>
          <a href="/" class="btn btn-primary">
            <i class="bi bi-house me-2"></i>Return to Home
          </a>
          <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <a href="/admin/dashboard" class="btn btn-outline-secondary">
              <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>